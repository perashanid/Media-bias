# Environment Configuration Template
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000

# Database Configuration
# For local development, use MongoDB locally
# For production, use MongoDB Atlas connection string
MONGODB_URI=mongodb://localhost:27017/media_bias_detector
MONGODB_DATABASE=media_bias_detector

# Security (Generate strong keys for production)
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Scraper Configuration
SCRAPER_DELAY=2.0
SCRAPER_MAX_RETRIES=3
SCRAPER_RETRY_DELAY=5.0
SCRAPER_TIMEOUT=30
SCRAPING_INTERVAL_HOURS=6
MAX_ARTICLES_PER_SOURCE=50
MIN_ARTICLE_LENGTH=100
MAX_ARTICLE_LENGTH=50000

# Bias Analysis Configuration
BIAS_ANALYSIS_BATCH_SIZE=20
AUTO_ANALYZE_BIAS=true

# Logging Configuration
LOG_LEVEL=INFO

# Performance Configuration
MAX_WORKERS=2
WORKER_TIMEOUT=120

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=100

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000/api