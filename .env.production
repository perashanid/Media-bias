# Production Environment Configuration

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
PORT=5000

# Database Configuration (Use MongoDB Atlas or similar)
MONGODB_URI=${MONGODB_URI}
MONGODB_DATABASE=media_bias_detector

# Security (Set these in Render environment variables)
SECRET_KEY=${SECRET_KEY}
JWT_SECRET_KEY=${JWT_SECRET_KEY}

# Scraper Configuration
SCRAPER_DELAY=2.0
SCRAPER_MAX_RETRIES=3
SCRAPER_RETRY_DELAY=10.0
SCRAPER_TIMEOUT=60
SCRAPING_INTERVAL_HOURS=6
MAX_ARTICLES_PER_SOURCE=100
MIN_ARTICLE_LENGTH=100
MAX_ARTICLE_LENGTH=50000

# Bias Analysis Configuration
BIAS_ANALYSIS_BATCH_SIZE=50
AUTO_ANALYZE_BIAS=true

# Monitoring Configuration
ENABLE_MONITORING=true
METRICS_RETENTION_DAYS=30
ALERT_RETENTION_DAYS=90

# Logging Configuration
LOG_LEVEL=INFO
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=300
KEEP_ALIVE=5

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Production specific
REACT_APP_API_URL=/api