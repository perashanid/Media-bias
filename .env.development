# Development Environment Configuration

# Database Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=media_bias_detector_dev
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5000
FLASK_HOST=0.0.0.0

# Security (development keys - not for production)
SECRET_KEY=dev_secret_key_not_for_production
JWT_SECRET_KEY=dev_jwt_secret_not_for_production

# Scraper Configuration (more frequent for testing)
SCRAPER_DELAY=1.0
SCRAPER_MAX_RETRIES=2
SCRAPER_RETRY_DELAY=5.0
SCRAPER_TIMEOUT=30
SCRAPING_INTERVAL_HOURS=1
MAX_ARTICLES_PER_SOURCE=10
MIN_ARTICLE_LENGTH=50
MAX_ARTICLE_LENGTH=50000

# Bias Analysis Configuration
BIAS_ANALYSIS_BATCH_SIZE=10
AUTO_ANALYZE_BIAS=true

# Monitoring Configuration
ENABLE_MONITORING=true
METRICS_RETENTION_DAYS=7
ALERT_RETENTION_DAYS=30

# Email Alerts Configuration (disabled in development)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
ALERT_FROM_EMAIL=dev@localhost
ALERT_TO_EMAILS=

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=logs/media_bias_detector_dev.log
LOG_MAX_SIZE=50MB
LOG_BACKUP_COUNT=3

# Performance Configuration
MAX_WORKERS=2
WORKER_TIMEOUT=120
KEEP_ALIVE=2

# Rate Limiting (disabled in development)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# Development specific
REACT_APP_API_URL=http://localhost:5000/api