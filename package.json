{
  "name": "media-bias-detector",
  "version": "1.0.0",
  "description": "Modern Media Bias Detector - Full Stack Application",
  "private": true,
  "scripts": {
    "build": "cd frontend && npm install && npm run build",
    "start": "gunicorn --bind 0.0.0.0:$PORT api.app:app",
    "dev": "concurrently --kill-others --prefix \"[{name}]\" --names \"backend,frontend\" \"python api/app.py\" \"cd frontend && npm start\"",
    "install-frontend": "cd frontend && npm install",
    "build-frontend": "cd frontend && npm run build",
    "postinstall": "npm run install-frontend"
  },
  "keywords": [
    "media-bias",
    "detector",
    "flask",
    "react",
    "python",
    "typescript",
    "modern",
    "production"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.9.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}